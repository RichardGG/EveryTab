{
    "name": "EveryTab",
    "description": "Quickly switch between tabs using a visual overview",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "<all_urls>"
    ],


    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_title": "Quick Tabs"
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+E",
              "mac": "Command+E",
              "chromeos": "Ctrl+E",
              "linux": "Ctrl+E"
            }
          }
    }

}